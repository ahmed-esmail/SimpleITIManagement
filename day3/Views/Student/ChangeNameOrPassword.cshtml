@model Student

@{
  ViewBag.Title = "Change Email or password";
}

<div class="container w-50">
  <h1 class="text-center">Student Credential</h1>
  <form enctype="multipart/form-data" class="container m-auto w-75 bg-light border-2 p-5 DeptForm" asp-action="ChangeNameOrPassword" asp-controller="student">

    <div class="form-group">
      <label asp-for="Email">Email</label>
      <input asp-for="Email" type="email" class="form-control" placeholder="Student Email">
      <span asp-validation-for="Email"></span>

    </div>

    <div class="form-group">
      <label asp-for="Password">Password</label>
      <input asp-for="Password" name="Password" type="password" class="form-control" placeholder="Student Password">
      <span asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
      <label asp-for="CPassword">Confirm Password</label>
      <input asp-for="Password" name="CPassword" type="password" class="form-control" placeholder="Student Password">
      <span asp-validation-for="Password"></span>
    </div>


    <input class="btn btn-warning mt-3" type="submit" value="Edit"/>
    <div asp-validation-summary="All" class="alter"></div>
  </form>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>