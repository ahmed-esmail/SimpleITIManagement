@model IEnumerable<Student>

<!DOCTYPE html>

<html>
<head>
  <meta name="viewport" content="width=device-width" />
  <title>Index</title>
  <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />

</head>
<body>
  <div class="container w-75 align-middle">
    <a asp-action="create" asp-controller="student" class="btn btn-primary my-2">Add Student</a>
    @if (@Model.Count() > 0)
    {
      <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>
             id
          </th>
          <th>
            Name
          </th>
          <th>
            Deptartment
          </th>
          <th>
            Action
          </th>
        </tr>

      </thead>
      <tbody>
        @foreach (var item in Model)
        {
          <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Department?.DeptName</td>
            <td>
              <a class="btn btn-warning" asp-action="edit"
                   asp-controller="student" 
                    asp-route-id="@item.Id"> Edit 
             </a>
              <a class="btn btn-danger"
               asp-action="Delete"
               onclick="return confirm('ARE YOU SURE TO DELETE STUDENT')"
              asp-route-id="@item.Id"> Delete 
             </a>
             <a class="btn btn-info" asp-action="details"
                   asp-controller="Student" 
                    asp-route-id="@item.Id"> Details 
             </a>
             <a class="btn btn-success" asp-action="ChangeNameOrPassword"
                   asp-controller="Student" 
                    asp-route-id="@item.Id"> User Authentication 
             </a>
            </td>
          </tr>

        }
      </tbody>
    </table>
    }
    </div>
</body>
</html>
